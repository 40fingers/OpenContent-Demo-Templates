<div class="oc-multiple oc-list oc-template-settings">
   {{#ifand Settings.Texts.Title Settings.Texts.Intro}}
   <header class="oc-header">
      {{#if Settings.Texts.Title}}
      <h1 class="oc-title">{{Settings.Texts.Title}}</h1>
      {{/if}}
      {{#if Settings.Texts.Intro}}
      <div class="oc-intro">{{Settings.Texts.Intro}}</div>
      {{/if}}
   </header>
   {{/ifand}}
   <div class="cols">
      {{#each Items}}
      <div class="oc-item {{@root.Settings.Style.Item.Width}}">
         <div class="oc-item-inner {{@root.Settings.Style.Item.BgColor}}">
            {{#if Title}}
            <h3 class="oc-title">{{Title}} {{#if Context.IsEditable}}<a class="edit-link"
                  href="{{Context.EditUrl}}"><img src="/icons/sigma/Edit_16x16_Gray.png" alt="edit" /></a>{{/if}}</h3>
            {{/if}}
            {{#if Text}}
            <div class="oc-text">
               {{Text}}
            </div>
            {{/if}}

         </div>
      </div>
      {{/each}}
   </div>
</div>