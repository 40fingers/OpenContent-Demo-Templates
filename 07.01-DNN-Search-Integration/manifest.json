{
    "editWitoutPostback": true,
    "index": true,

    "templates": {
        "template": {
            "type": "multiple",
            "title": "List",            
            "main": {
                "template": "template.hbs",
				"dnnsearch": true,
                 "dnnSearchTitle": "{{Title}}",
                 "dnnSearchDescription": "Article: {{#if Summary}}{{Summary}}{{else}}{{truncateWords Text 20}}{{/if}}",
                 "dnnSearchText": "{{convertHtmlToText Text}}",
				"clientSideData": false
            },
			"detail": {
                "template": "detail.hbs",
				"clientSideData": false
            },
			"images": {
                "template": "images.hbs",
				"clientSideData": false
            }
        }
    }

}