<script id="jplist-template" type="text/x-handlebars-template">
    <!-- handlebars template -->
	{{#each Items}}
    <div data-id="{{Context.Id}}" class="oc-item-wrap">
		{{#if Context.IsEditable}}
		<div class="oc-edit-bar">
			<span class="status">{{publishstatus}} : {{formatDateTime publishstartdate "DD-MM-YYYY" "nl-NL"}} > {{formatDateTime publishenddate "DD-MM-YYYY" "nl-NL"}}</span>
			<a href="{{Context.EditUrl}}" title="Edit Item" style="background-color:#000;color:#fff;padding: 0 2px; ">edit</a>
		</div>
		{{/if}}
		
		<div class="oc-item">
			<!-- item {{@index}} -->
			<article>
				
					<header>
						<h3 class="oc-title"><a href="{{#if Link}}{{Link}}{{else}}{{Context.DetailUrl}}{{/if}}">{{#if ListTitle}}{{ListTitle}}{{else}}{{Title}}{{/if}}</a></h3>
						<div class="oc-date">
							Published: {{formatDateTime publishstartdate "DD-MM-YYYY"}}
						</div>
					</header>
					<div class="oc-content">
						<div class="oc-text">
						{{#if Summary}}
							{{Summary}}
							{{else}}
							No summary Entered
						{{/if}}
						
						</div>
					</div>
					<footer class="oc-buttons">
						<a href="{{#if Link}}{{Link}}{{else}}{{Context.DetailUrl}}{{/if}}" class="btn btn-primary" role="button">{{../Settings.Texts.ReadMore}}</a>
					</footer>

			</article>
		</div>
    </div>
    {{/each}}

</script>
