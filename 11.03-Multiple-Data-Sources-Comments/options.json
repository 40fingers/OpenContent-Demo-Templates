{
  "fields": {
    "Title": {
      "type": "text"
    },
    "Summary": {
      "type": "textarea"
     
    },
    "Text": {
      "type": "ckeditor",
      "ckeditor": {
        "extraPlugins": "youtube,dnnpages",
        "height": 700,
        "toolbar": [
          {
            "name": "text",
            "items": [
              "Bold",
              "Italic",
              "Underline",
              "RemoveFormat"
            ]
          },
          {
            "name": "style",
            "items": [
              "Format"
            ]
          },
          {
            "name": "layout",
            "items": [
              "Table",
              "NumberedList",
              "BulletedList",
              "Outdent",
              "Indent"
            ]
          },
          {
            "name": "link",
            "items": [
              "Link",
              "Unlink"
            ]
          },
          {
            "name": "Img",
            "items": [
              "EasyImageUpload",
              "Youtube"
            ]
          },
          {
            "name": "Source",
            "items": [
              "ShowBlocks",
              "Source"
            ]
          }
        ],
        "format_tags": "p;h2;h3;h4;div"
      }
    },
    "Featured": {
      "type": "checkbox"
    },
    "publishstartdate": {
      "type": "date",
      "picker": {
        "format": "DD-MM-YYYY HH:mm",
        "minDate": "2000-01-01",
        "maxDate": "2099-12-31"
      }
    },
    "publishenddate": {
      "type": "date",
      "picker": {
        "format": "DD-MM-YYYY HH:mm",
        "minDate": "2000-01-01",
        "maxDate": "2099-12-31"
      }
    },
    "publishstatus": {
      "type": "select",
      "sort": false,
      "optionLabels": [
        "draft",
        "published"
      ]
    }
  }
}