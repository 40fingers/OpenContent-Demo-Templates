<script id="jplist-template" type="text/x-handlebars-template">
    <!-- handlebars template -->
	{{#each Items}}
    <div data-id="{{Context.Id}}">
		{{#if Context.IsEditable}}
		<div class="sorthandle">
			<span class="status">{{publishstatus}} : {{publishstartdate}} - {{publishenddate}}</span>
			<a href="{{Context.EditUrl}}" title="Edit Item" style="background-color:#000;color:#fff;padding: 0 2px; "><i class="fa fa-pencil"></i></a>
		</div>
		{{/if}}
		
		<div class="item">
			<!-- item {{@index}} -->
			<article>
				
				
					<header>
						<h3 class="title"><a href="{{Context.DetailUrl}}">{{Title}}</a></h3>
					</header>
					<footer class="more">
					{{#if Categories}}
						<div class="categories d-none">
						{{#each Categories}}
						<a class="category-link" data-id="{{Id}}" href="{{@root.Context.MainUrl}}#Categories:pathGroup={{Id}}|paging:currentPage=0">{{Title}}{{#if @last}}{{else}}, {{/if}}
						{{/each}}
						</div>
					{{/if}}
						<a href="{{#if Link}}{{Link}}{{else}}{{Context.DetailUrl}}{{/if}}" class="btn btn-primary" role="button">{{../Settings.Texts.ReadMore}}</a>
					</footer>
				</div>
			</article>
		</div>
    </div>
    {{/each}}

</script>
